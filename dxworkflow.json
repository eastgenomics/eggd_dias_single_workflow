{
  "name": "dias_single_v2.5.0",
  "title": "dias_single_v2.5.0",
  "version": "2.5.0",
  "summary": "Germline single sample workflow",
  "whatsNew": "*v2.4.0: Sentieon updated to v4.2.2; *v2.5.0: add new sex_check app, updated mosdepth, picard and fastqc to latest version",
  "stages": [
    {
      "id": "stage-fastQC",
      "executable": "app-eggd_fastqc/1.2.0"
    },
    {
      "id": "stage-sentieon_dnaseq",
      "executable": "app-sentieon-dnaseq/4.2.2"
    },
    {
      "id": "stage-verifybamid",
      "executable": "app-eggd_verifybamid/2.2.1",
      "input": {
        "input_bam": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "mappings_bam"
          }
        },
        "input_bam_index": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "mappings_bam_bai"
          }
        }
      }
    },
    {
      "id": "stage-vcfQC",
      "executable": "applet-FpG4zY8433GbJ9Xj5vBvzBFp",
      "input": {
        "vcf_file": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "variants_vcf"
          }
        }
      }
    },
    {
      "id": "stage-samtools_flagstat",
      "executable": "app-eggd_samtools_flagstat/1.1.0",
      "input": {
        "input_bam": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "mappings_bam"
          }
        },
        "input_bam_index": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "mappings_bam_bai"
          }
        }
      }
    },
    {
      "id": "stage-picardQC",
      "executable": "app-eggd_picard_QC/1.1.0",
      "input": {
        "sorted_bam": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "mappings_bam"
          }
        }
      }
    },
    {
      "id": "stage-mosdepth",
      "executable": "app-eggd_mosdepth/1.1.0",
      "input": {
        "bam": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "mappings_bam"
          }
        },
        "index": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "mappings_bam_bai"
          }
        }
      }
    },
    {
      "id": "stage-somalier_extract",
      "executable": "app-eggd_somalier_extract/1.2.0",
      "input": {
        "sample_vcf": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "variants_vcf"
          }
        }
      }
    },
    {
      "id": "stage-sex_check",
      "executable": "app-eggd_sex_check/1.1.0",
      "input": {
        "input_bam": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "mappings_bam"
          }
        },
        "index_file": {
          "$dnanexus_link": {
            "stage": "stage-sentieon_dnaseq",
            "outputField": "mappings_bam_bai"
          }
        }
      }
    }
  ]
}
